#include<bits/stdc++.h>
using namespace std;
string divide(string str,int x){
    int current=0;
    int reminder=0;//余数
    for(int i=0;i<str.size();i++){
        current=reminder*10+str[i]-'0';
        str[i]=current/x+'0';//这一位的商，拼凑起来也就是结果
        reminder=current%x;//余数
    }
    int pos=0;
    //可能会出现前导0，这里是去掉前导0
    while(str[pos]=='0')
        pos++;
    return str.substr(pos);
}
int main(){
    string str;
    while(cin>>str){
        vector<int>ans;
        while(str.size()!=0){
            int last=str[str.size()-1]-'0';
            ans.push_back(last%2);
            str = divide(str,2);
        }
        for(int i=ans.size()-1;i>=0;i--){
            cout<<ans[i];
        }
        cout<<endl;
    }

    return 0;
}

